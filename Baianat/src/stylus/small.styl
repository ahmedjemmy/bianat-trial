/* Prevent from orientation changes iphone & win*/
html {-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;}
/* Natural box layout margin -outside padding - inside*/
* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

/*--------BODY----------*/
body 
    font-family: $primaryFont
    font-weight: $normalWeight
    font-size: 16px

/*--------HEADER----------*/
header
    background-color: $primaryColor
    color: $secondaryColor
    padding: 1rem $gutter
    h1
        font-size: 2rem
        font-weight: $normalWeight
    h2
        font-size: 1.06rem
        font-weight: $normalWeight

/*--------NAVIGATION----------*/
nav 
    background-color: $secondaryColor
    border-bottom 1px solid rgba(0, 0, 0, .3)
    ul 
        li 
            float: left
            width: 25%
            border-right 1px solid rgba(0, 0, 0, .3)
        li:last-child
            border-right none
        li a 
            display: block
            text-align: center
            font-weight: $boldWeight
            padding: .5rem 0
            color: $primaryColor
            text-decoration: none
            transition: background 0.75s ease, color 0.75 ease
            
        li a:hover
            color: $secondaryColor
            background-color: $primaryColor
        li.active a  
            background-color darken($secondaryColor, 20%)

/*--------MAIN----------*/
main  
    figure.banner
        width: 100%
    figure.banner img 
        width: 100%
    
    h1 
        font-size: 2rem
        margin: 1rem 0 0 $gutter
        color: $primaryColor
    h2
        font-size: 1.5rem
        margin: .75rem 0 0 $gutter
        color: lighten($primaryColor, 10%)
    h3
        font-size: 1.2rem
        color: lighten($primaryColor, 20%)
    p 
        line-height: 130%
        color: $fontColor
    hr.fadeAway
        background: linear-gradient(to right, rgba(66,78,100,1) 0%,rgba(125,185,232,0) 100%)
        height: 2px
        border: none
        margin: 0 $gutter
    figure.photo
        width: 100%-$gutterdbl
        margin: .5rem $gutter

    figure.photo img  
        width: 100%
    figcaption
        text-align: center
    div.blog article
        margin: .5rem $gutter
        width: 100%-($gutterdbl)


/*--------FOOTER----------*/
footer 
    width: 100%
    background-color: $primaryColor
    p  
        text-align: center
        color: $secondaryColor
        padding: .75rem 0
        font-size: .9rem
        a  
            color: $secondaryColor



/*--------CLEARFIX----------*/

.clearfix:after
    content: ""
    display: table
    clear: both


